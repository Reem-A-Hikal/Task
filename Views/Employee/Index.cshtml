@model IEnumerable<EmployeeViewModel>

@{
    ViewData["Title"] = "Employee List";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="col">
            <h2 class="fw-bold text-primary"><i class="bi bi-people me-2"></i>Employee List</h2>
            <p class="text-muted ms-5">Manage your employees</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg me-2"></i> Add New Employee
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-3 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="py-3 ps-4 text-start fw-semibold">
                                @Html.DisplayNameFor(model => model.Code)
                            </th>
                            <th class="py-3 text-start fw-semibold">
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th class="py-3 pe-4 text-end fw-semibold">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="border-top">
                                <td class="ps-4 text-start">
                                    <span class="fw-medium">@Html.DisplayFor(modelItem => item.Code)</span>
                                </td>
                                <td class="text-start">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td class="pe-4 text-end">
                                    <div class="d-flex justify-content-end gap-2">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary px-3">
                                            <i class="bi bi-pencil me-1"></i> Edit
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary px-3">
                                            <i class="bi bi-eye me-1"></i> View
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .table-hover tbody tr:hover {
            background-color: rgba(13, 110, 253, 0.05);
        }

        .table th {
            border-top: none;
            border-bottom: 1px solid #dee2e6;
        }

        .table td {
            vertical-align: middle;
        }
    </style>
}